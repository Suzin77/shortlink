{% extends 'base.html.twig' %}
{% block title %} Short link {% endblock %}
      
{% block body %}
    <h1>Articles</h1>
    {% if articles is defined %}
        <table id = "articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Articels Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{article.title}}</td>
                        <td>
                            <a href="article/show/{{article.id}}" class="btn btn-dark">Show</a>
                        </td>
                        <td>
                            <a href="article/edit/{{article.id}}" class="btn btn-light">Edit</a>
                        </td>
                        <td>
                            <a href="article/delete/{{article.id}}" class="btn btn-danger delete-article" data-id = {{article.id}}>Del</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    {% else %}
        <p>there is no articles</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
 <script src="js/main.js"></script>
{% endblock %}