{% extends 'base.html.twig' %}
{% block title %} Short link {% endblock %}
      
{% block body %}
    <h1>Articles</h1>
    {% if articles is defined %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Articels Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{article}}</td>
                        <td>
                            <a href="/article/1" class="btn btn-dark">Show</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    {% else %}
        <p>there is no articles</p>
    {% endif %}
{% endblock %}